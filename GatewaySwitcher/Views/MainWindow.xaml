<Window x:Class="GatewaySwitcher.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gateway Switcher"
        Height="600" Width="500"
        MinHeight="500" MinWidth="450"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Closing="Window_Closing">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Gateway Switcher"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Manage your network profiles"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Network Adapter Selection -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Network Adapter"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="AdapterComboBox"
                              ItemsSource="{Binding Adapters}"
                              SelectedItem="{Binding SelectedAdapter}"
                              DisplayMemberPath="Description"
                              VerticalContentAlignment="Center"/>
                    <Button Grid.Column="1"
                            Content="Refresh"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding RefreshAdaptersCommand}"
                            Margin="8,0,0,0"
                            Padding="12,8"/>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Ellipse Width="10" Height="10" Margin="0,0,6,0">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse">
                                <Setter Property="Fill" Value="{StaticResource ErrorBrush}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedAdapter.IsConnected}" Value="True">
                                        <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                    <TextBlock Text="{Binding SelectedAdapter.StatusText, FallbackValue='Not Connected'}"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text=" | " Foreground="{StaticResource DividerBrush}"/>
                    <TextBlock Text="{Binding SelectedAdapter.IpAddress, FallbackValue='No IP'}"
                               FontSize="12"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Profiles List -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Network Profiles"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="+ Add"
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding AddProfileCommand}"
                                Padding="12,6"/>
                    </StackPanel>
                </Grid>

                <ListBox Grid.Row="1"
                         x:Name="ProfilesListBox"
                         ItemsSource="{Binding Profiles}"
                         SelectedItem="{Binding SelectedProfile}"
                         ItemContainerStyle="{StaticResource ProfileListItem}"
                         BorderThickness="0"
                         Background="Transparent"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                        <Border Background="{StaticResource AccentBrush}"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Margin="8,0,0,0"
                                                Visibility="{Binding IsDefault, Converter={StaticResource BoolToVisibility}}">
                                            <TextBlock Text="DEFAULT"
                                                       FontSize="10"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} | GW: {1}">
                                                    <Binding Path="NetworkSettings.IpAddress" FallbackValue="DHCP"/>
                                                    <Binding Path="NetworkSettings.Gateway" FallbackValue="Auto"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                        <TextBlock Text="Proxy: " FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        <TextBlock FontSize="11">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Disabled"/>
                                                    <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ProxySettings.Enabled}" Value="True">
                                                            <Setter Property="Text" Value="{Binding ProxySettings.FullProxyAddress}"/>
                                                            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Edit"
                                            Style="{StaticResource SecondaryButton}"
                                            Padding="8,4"
                                            FontSize="12"
                                            Click="EditProfile_Click"
                                            Tag="{Binding Id}"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding Profiles.Count, Converter={StaticResource ZeroToVisibility}}">
                    <TextBlock Text="No profiles yet"
                               FontSize="16"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Click '+ Add' to create your first profile"
                               FontSize="12"
                               Foreground="{StaticResource DividerBrush}"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Apply Selected Profile"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding ApplyProfileCommand}"
                    HorizontalAlignment="Left"
                    Padding="20,10"/>

            <Button Grid.Column="1"
                    Content="Duplicate"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding DuplicateProfileCommand}"
                    Margin="8,0,0,0"
                    Padding="12,10"/>

            <Button Grid.Column="2"
                    Content="Delete"
                    Style="{StaticResource DangerButton}"
                    Command="{Binding DeleteProfileCommand}"
                    Margin="8,0,0,0"
                    Padding="12,10"/>

            <Button Grid.Column="3"
                    Content="Update Default"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding UpdateDefaultCommand}"
                    Margin="8,0,0,0"
                    Padding="12,10"
                    ToolTip="Update default profile with current system settings (requires password)"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4"
                Background="{StaticResource SurfaceBrush}"
                CornerRadius="4"
                Padding="12,8"
                Margin="0,16,0,0">
            <Grid>
                <TextBlock Text="{Binding StatusMessage}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Minimize to Tray"
                            Style="{StaticResource SecondaryButton}"
                            Padding="10,4"
                            FontSize="12"
                            Click="MinimizeToTray_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="5"
                Background="#80FFFFFF"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                <TextBlock Text="Please wait..."
                           Margin="0,12,0,0"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
