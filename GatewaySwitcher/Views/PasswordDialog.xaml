<Window x:Class="GatewaySwitcher.Views.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Default Profile"
        Height="220" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <Ellipse Width="40" Height="40" Fill="{StaticResource AccentBrush}">
                <Ellipse.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2" Color="#FF9800"/>
                </Ellipse.Effect>
            </Ellipse>
            <TextBlock Text="ðŸ”’"
                       FontSize="20"
                       Margin="-30,10,0,0"
                       VerticalAlignment="Center"/>
            <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="Password Required"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock Text="Enter password to update default profile"
                           FontSize="12"
                           Foreground="{StaticResource TextSecondaryBrush}"/>
            </StackPanel>
        </StackPanel>

        <!-- Description -->
        <TextBlock Grid.Row="1"
                   Text="This will overwrite the default profile with your current system network settings."
                   TextWrapping="Wrap"
                   Foreground="{StaticResource TextSecondaryBrush}"
                   FontSize="12"
                   Margin="0,0,0,16"/>

        <!-- Password Input -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Password"
                       FontSize="12"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,0,0,4"/>
            <PasswordBox x:Name="PasswordBox"
                         Height="36"
                         KeyDown="PasswordBox_KeyDown"/>
            <TextBlock x:Name="ErrorText"
                       Text="Invalid password"
                       Foreground="{StaticResource ErrorBrush}"
                       FontSize="12"
                       Visibility="Collapsed"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButton}"
                    Click="Cancel_Click"
                    Padding="16,8"
                    Margin="0,0,8,0"/>
            <Button Content="Confirm"
                    Style="{StaticResource PrimaryButton}"
                    Click="Confirm_Click"
                    Padding="16,8"/>
        </StackPanel>
    </Grid>
</Window>
